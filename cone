export class Cone {
    private formato: number;
    private cor: string;
    private tamanho: number;

    public constructor(_formato: number, _cor: string, _tamanho: number) {
        this.formato = _formato;
        this.cor = _cor;
        this.tamanho = _tamanho;
    }

    public getFormato(): number {
        return this.formato;
    }

    public getCor(): string {
        return this.cor;
    }

    public getTamanho(): number {
        return this.tamanho;
    }
    
    public sinaliza(pessoas: string): void  {
        console.log(`As ${pessoas} colocam cone para dar algum sinal!`);
    }

    public atividadeFisica(): void {
        console.log(`Ã© usado tambem para atividade fisica!`);
    }
}